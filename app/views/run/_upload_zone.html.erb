<div id="upload-zone" class="list-group">

  <h4 class="list-group-item active">Upload panel</h4>

  <div id="upload-message" class="list-group-item">
    <h3 class="text-center"><em>Drag and drop files to this box to upload</em></h3>
  </div>

  <div id="hidden-form" class="hidden">
    <%= form_tag ujs_upload_create_path, method: 'put', id: 'pdf-dropzone' do %>
        <%= hidden_field_tag :category, category %>
        <%= hidden_field_tag :job, job.id %>
        <%= file_field_tag :file %>
        <%= submit_tag 'Upload...' %>
    <% end %>
  </div>

  <div id="previews">
    <div id="template" class="list-group-item">
      <div>
        <span class="hidden"><img data-dz-thumbnail/></span>
        <p class="name" data-dz-name></p>
        <strong class="error text-danger" data-dz-errormessage></strong>
      </div>
      <div>
        <p class="text-right" data-dz-size></p>
        <div class="progress active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
          <div class="progress-bar progress-bar-info" style="width:0%;" data-dz-uploadprogress></div>
        </div>
      </div>
    </div>
  </div>

</div>